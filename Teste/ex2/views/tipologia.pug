extends layout

block content
  header.w3-container.w3-teal.w3-card-4
    h1.w3-center #{title}
  
  .w3-container.w3-section
    h1 Tipologia
    .w3-card-4
      table.w3-table.w3-table-all
        tr
          th Estado
          th Sigla
          th Designação
        tr
            td= tipologia.estado
            td= tipologia.sigla
            td= tipologia.designacao
  
  if elementos.length != 0
    .w3-container.w3-section
      h1 Elementos
      .w3-card-4
        table.w3-table.w3-table-all
          tr
            th Sigla
            th Designação
          each elemento in elementos        
            tr(data-href='/' + elemento.link, class="clickable")
              td
                a(href='/' + elemento.link) #{elemento.sigla}
              td= elemento.designacao
  
  if dono.length != 0
    .w3-container.w3-section
      h1 Processos que é dono
      .w3-card-4
        table.w3-table.w3-table-all
          tr
            th Código
            th Titulo
          each don in dono        
            tr
              td
                a(href=don.link) #{don.codigo}
              td= don.titulo

  if participante.length != 0
    .w3-container.w3-section
      h1 Processos que é participante
      .w3-card-4
        table.w3-table.w3-table-all
          tr
            th Código
            th Titulo
          each particip in participante        
            tr
              td
                a(href=particip.link) #{particip.codigo}
              td= particip.titulo
            

  a(href='/tipologias')
    button.w3-button.w3-blue-grey.w3-margin Voltar
  a(href='/')
    button.w3-button.w3-blue-grey.w3-margin Página Inicial