extends layout

block content
  header.w3-container.w3-teal.w3-card-4
    h1.w3-center #{title}
  
  .w3-container.w3-section
    h1 Entidade
    .w3-card-4
      table.w3-table.w3-table-all
        tr
          th Estado
          th Sigla
          if entidade.sioe !== ""
            th SIOE
          th Designação
          th Internacional
        tr
            td= entidade.estado
            td= entidade.sigla
            if entidade.sioe !== ""
              td= entidade.sioe
            td= entidade.designacao
            if entidade.internacional !== ""
              td= entidade.internacional
            else
              td= "Não"
  if tipologias.length != 0
    .w3-container.w3-section
      h1 Tipologias
      .w3-card-4
        table.w3-table.w3-table-all
          tr
            th Sigla
            th Designação
          each tipologia in tipologias        
            tr(data-href='' + tipologia.link, class="clickable")
              td
                a(href='' + tipologia.link) #{tipologia.sigla}
              td= tipologia.designacao
  
  if dono.length != 0
    .w3-container.w3-section
      h1 Processos que é dono
      .w3-card-4
        table.w3-table.w3-table-all
          tr
            th Código
            th Titulo
          each don in dono        
            tr
              td
                a(href=don.link) #{don.codigo}
              td= don.titulo

  if participante.length != 0
    .w3-container.w3-section
      h1 Processos que é participante
      .w3-card-4
        table.w3-table.w3-table-all
          tr
            th Código
            th Titulo
          each particip in participante        
            tr
              td
                a(href=particip.link) #{particip.codigo}
              td= particip.titulo
            

  a(href='/')
    button.w3-button.w3-blue-grey.w3-margin Voltar