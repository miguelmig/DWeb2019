extends index

block item
  .w3-modal(style='display:block;')
    .w3-modal-content.w3-card-4
      header.w3-container.w3-teal.w3-card-4.w3-center
        h3 Nova Música
      .w3-container.w3-margin.w3-padding.w3-section
        form.w3-container.w3-padding-16(action='/add', method='POST')
          b
            label Província
          input.w3-input.w3-border(type="text" name="prov")
          br
          b
            label Local
          input.w3-input.w3-border(type="text" name="local")
          br
          b
            label Título
          input.w3-input.w3-border(type="text" name="tit")
          br
          b
            label Músico
          input.w3-input.w3-border(type="text" name="musico")
          br
          b
            label Instrumentos
          input.w3-input.w3-border(type="text" name="inst")
          br
          b
            label Observações
          input.w3-input.w3-border(type="text" name="obs")
          br
          b
            label Ficheiro
          .w3-container.w3-border
              .w3-container.w3-third.w3-left
                  b
                    label Tipo
                  input.w3-input.w3-border(type="text" name="file_type")
              .w3-container.w3-rest
                  b
                    label Nome
                  input.w3-input.w3-border(type="text" name="file_name")
              br
          br
          b
            label Duração
          input.w3-input.w3-border(type="text" name="duracao")
          br
          input.w3-btn.w3-blue-gray(type="submit" value="Adicionar")
          br
        a(href='/')
          button.w3-right.w3-btn.w3-blue-gray Voltar 