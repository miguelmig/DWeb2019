extends layout
block form_content
    header.w3-container.w3-teal
        h3.w3-center Gest√£o de Tarefas

    .w3-container.w3-section
        .w3-card-4
            form.w3-container(action='/tarefa', method='POST')
                .w3-display-container.w3-padding-16
                    label Tarefa
                    input.w3-input.w3-border.w3-light-grey.w3-margin-bottom(type='text', 
                        name='nome', 
                        style='position:relative; top: -28px; left:60px; width:95%')

                    label Data Limite
                    input.w3-input.w3-border.w3-light-grey.w3-margin-bottom(type='text', 
                        name='data',
                        style='position:relative; top: -28px; left:95px; width:92%')

                    input.w3-btn.w3-blue-grey.w3-margin-bottom(type='submit', value='Enviar', style='position:relative; left:93%')
block tasks
    .w3-container.w3-section
        .w3-card-4
            .w3-display-container
                table.w3-table.w3-table-all
                    tr 
                        th Tarefa
                        th Data Limite
                        th 
                    each tarefa in tarefas
                        tr
                            td= tarefa.nome
                            td= tarefa.data
                            form(action = '/remover' ,method='POST')
                                td
                                    input(type='hidden', value=tarefa.id, name='id')
                                    input.w3-btn.w3-blue-grey(value='Remover', type='submit') 